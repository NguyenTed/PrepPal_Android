<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0071F9"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_back_black"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/back_button" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:src="@drawable/img_bee"
        android:layout_above="@+id/container_choose_level"/>
    
    <LinearLayout
        android:id="@+id/container_choose_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_20dp_white"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_centerInParent="true"
        >
        <!--       My band level title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:text="@string/my_band_level"/>
            <TextView
                android:id="@+id/tv_my_band_level_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#0071F9"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="IELTS 6.0-6.5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/container_band_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_1000dp_gray">
            <Button
                android:id="@+id/btn_band_4_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_1000dp_gray"
                android:stateListAnimator="@null"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:text="IELTS 4.0 - 4.5" />
            <Button
                android:id="@+id/btn_band_5_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_1000dp_gray"
                android:stateListAnimator="@null"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:text="IELTS 5.0 - 5.5"/>
            <Button
                android:id="@+id/btn_band_6_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_1000dp_white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:stateListAnimator="@null"
                android:text="IELTS 6.0 - 6.5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFF3F4F6"
            android:layout_marginVertical="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <!--       My band goal title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:text="@string/my_band_goal"/>
            <TextView
                android:id="@+id/tv_my_band_goal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#0071F9"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="IELTS 6.5-7.0+"/>
        </LinearLayout>

        <!--            My band goal choose-->
        <LinearLayout
            android:id="@+id/container_band_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/rounded_1000dp_gray"
            android:gravity="center">
            <Button
                android:id="@+id/btn_goal_5_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_1000dp_gray"
                android:stateListAnimator="@null"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:text="IELTS 5.0+" />
            <Button
                android:id="@+id/btn_goal_6_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_1000dp_gray"
                android:stateListAnimator="@null"
                android:textSize="13sp"
                android:text="IELTS 6.0+"/>
            <Button
                android:id="@+id/btn_goal_6_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/rounded_1000dp_white"
                android:stateListAnimator="@null"
                android:textSize="13sp"
                android:text="IELTS 6.5-7.0+"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_choose_level"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/save"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4385d3"
        android:background="@drawable/rounded_button_10dp_blue"
        android:stateListAnimator="@null"/>




</RelativeLayout>