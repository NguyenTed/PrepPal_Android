<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Câu hỏi trong CardView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_header_gradient"
        android:elevation="6dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp">


        <!-- Nút Back -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/ic_back_black"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="@string/back_button"
            app:tint="@color/white" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Writing Topic"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:gravity="center"/>
    </FrameLayout>

    <!-- Hình ảnh câu hỏi (nếu có) -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Writing test description"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/imgQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@android:color/darker_gray"/>

    <!-- Câu trả lời của học sinh (Chỉ xem) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvStudentAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Student's answer"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="#FFF8DC"/>
    </androidx.cardview.widget.CardView>

    <!-- Ô nhập nhận xét của giáo viên -->
    <EditText
        android:id="@+id/etComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter comments for the student"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:maxLines="6"
        android:gravity="top"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="#E8F5E9"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <!-- Ô nhập điểm + Nút Submit căn phải -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp">
        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:spinnerMode="dropdown"
            android:entries="@array/submission_states"/>


        <EditText
            android:id="@+id/etScore"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:hint="0.0"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="#58BBFD"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/9.0"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingStart="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_header_gradient"
            android:padding="10dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>
