<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Top bar with Part and Timer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="8dp">

        <!-- Back arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#070202"/>

        <!-- Part label -->
        <TextView
            android:id="@+id/partLabelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Part 2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />


    </LinearLayout>
    <!-- Clock icon and timer -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_timer_red"
            android:layout_marginEnd="4dp"
            app:tint="#D32F2F" />

        <TextView
            android:id="@+id/tvListeningTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59:50"
            android:textSize="16sp"
            android:textColor="#D32F2F"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Audio progress bar -->
    <LinearLayout
        android:id="@+id/listeningProgressSteps"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:weightSum="4"
        android:gravity="center_vertical">

        <View
            android:id="@+id/step1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/progress_step_inactive" />

        <View
            android:id="@+id/step2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/progress_step_inactive" />

        <View
            android:id="@+id/step3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/progress_step_inactive" />

        <View
            android:id="@+id/step4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/progress_step_inactive" />
    </LinearLayout>



    <!-- RecyclerView for Questions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questionGroupRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Navigation bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <Button
            android:id="@+id/btnPreviousPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Previous"
            android:background="@android:color/transparent"
            android:textColor="#2196F3"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNextPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next →"
            android:background="@android:color/transparent"
            android:textColor="#2196F3"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>
