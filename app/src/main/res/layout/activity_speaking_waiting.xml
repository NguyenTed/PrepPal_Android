<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_back_black"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="@string/back_button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="Title"
                android:textColor="#ff0D0D0D"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTestType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speaking Test"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="#ff0D0D0D"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="20dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="You have booked the speaking book, please wait until the test day"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textStyle="bold"
                android:text="SPEAKING TIME"/>
            <TextView
                android:id="@+id/tvBookingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:background="@drawable/rounded_5dp_white"
                android:text="29/03/2024, 7pm - 7:30pm"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="end|bottom"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnBookAgain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_20dp_gray"
                    android:text="Book Again"/>
                <Button
                    android:id="@+id/btnJoin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_button_20dp_blue"
                    android:textColor="@color/white"
                    android:text="JOIN"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="You can book the meeting again before the last booking time 24 hours."/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>