<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/course_item_background"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Thông tin khóa học -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IELTS Skill Builder"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Hình ảnh -->
        <ImageView
            android:id="@+id/courseImage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:padding="40dp"
            android:src="@drawable/ic_course_item" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/entryLevel"
            android:layout_marginTop="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Entry level: 5.0 - 5.5"
            android:textSize="13sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/targetLevel"
            android:layout_marginTop="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Target level: 6.0"
            android:textSize="13sp"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
