<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:padding="16dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="2dp">

    <!-- Câu hỏi số -->
    <TextView
        android:id="@+id/tvQuestionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Câu trả lời dạng điền (text) -->
    <EditText
        android:id="@+id/etAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your answer"
        android:background="@drawable/bg_input"
        android:padding="12dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- Câu hỏi lựa chọn 1 đáp án (radio) -->
    <RadioGroup
        android:id="@+id/radioGroupOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

    <!-- Câu hỏi nhiều lựa chọn (checkbox) -->
    <LinearLayout
        android:id="@+id/layoutCheckboxOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

    <!-- Câu hỏi matching (spinner) -->
    <Spinner
        android:id="@+id/spinnerMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>
