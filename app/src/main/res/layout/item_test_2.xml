<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp">

        <!-- Tên bài kiểm tra -->
        <TextView
            android:id="@+id/testTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IELTS Handbook 19 - Test 1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Nút Listening -->
        <Button
            android:id="@+id/btnListening"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Listening"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_listening"
            android:drawablePadding="6dp"
            android:backgroundTint="#ECEEFF" />

        <!-- Nút Reading -->
        <Button
            android:id="@+id/btnReading"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Reading"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_reading"
            android:drawablePadding="6dp"
            android:backgroundTint="#E5F6F5" />

        <!-- Nút Writing -->
        <Button
            android:id="@+id/btnWriting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Writing"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_writing"
            android:drawablePadding="6dp"
            android:backgroundTint="#FFF1E6" />

        <!-- Nút Speaking -->
        <Button
            android:id="@+id/btnSpeaking"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Speaking"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_speaking"
            android:drawablePadding="6dp"
            android:backgroundTint="#FFEAF4" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
